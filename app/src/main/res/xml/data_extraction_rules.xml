<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!--
        These rules apply to the cloud backup (Google Drive).
        We are using the same rule as in backup_rules.xml to keep it consistent:
        only back up the database.
        -->
        <include domain="database" path="." />
    </cloud-backup>
    <device-transfer>
        <!--
        These rules apply when the user transfers data to a new phone.
        We include the database here to ensure that when you switch devices,
        all your saved sessions and settings are migrated seamlessly.
        -->
        <include domain="database" path="." />
    </device-transfer>
</data-extraction-rules>
